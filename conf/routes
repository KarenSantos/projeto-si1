# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.Application.index()

# Periodos	
GET     /periodos							controllers.Application.periodos()
GET    	/novoPeriodo/:periodo  				controllers.Application.novoPeriodo(periodo: Int)

# Edicoes
GET    	/editar/:periodo						controllers.Application.editar(periodo: Int)
GET     /adicionar/:disciplinaId/:periodo		controllers.Application.adicionar(disciplinaId: String, periodo: Int)
GET 	/remover/:disciplinaId/:periodo			controllers.Application.remover(disciplinaId: String, periodo: Int)
GET 	/deletar/:periodo						controllers.Application.deletarPeriodo(periodo: Int)
GET		/mover/:disciplinaId/:perFurutu/:perAtual		controllers.Application.mover(disciplinaId: String, perFuturu: Int, perAtual: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
